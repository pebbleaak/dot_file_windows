# ~/.clang-format
BasedOnStyle: LLVM            # Start from LLVM style
IndentWidth: 4                # Use 4 spaces per indent
TabWidth: 4                   # Tabs count as 4 spaces
UseTab: Never                 # Always convert tabs to spaces
ColumnLimit: 100              # Wrap lines at 100 columns
BreakBeforeBraces: Attach     # Put braces on their own line (optional)
AllowShortIfStatementsOnASingleLine: false
AllowShortLoopsOnASingleLine: false
AllowShortFunctionsOnASingleLine: false
SpaceAfterCStyleCast: true
PointerAlignment: Left
DerivePointerAlignment: false
RemoveBracesLLVM: false
SortIncludes: false           # Donâ€™t reorder #includes
SpaceBeforeParens: ControlStatements

